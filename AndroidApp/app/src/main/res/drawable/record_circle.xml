<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer green ring: outer ≈ 80dp, inner ≈ 75dp -->
    <item android:gravity="center">
        <shape
            android:shape="ring"
            android:useLevel="false"
            android:innerRadius="37.5dp"
            android:thickness="2.5dp">

            <!-- overall bounds for the drawable -->
            <size
                android:width="80dp"
                android:height="80dp" />

            <!-- the *ring* itself is green; inside innerRadius is transparent -->
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Inner red circle: 70dp -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="70dp"
                android:height="70dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
